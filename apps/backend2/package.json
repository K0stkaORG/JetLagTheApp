{
	"name": "backend2",
	"version": "1.0.0",
	"description": "Backend server for Jetlag application",
	"main": "dist/index.js",
	"scripts": {
		"dev": "tsx watch src/index.ts",
		"build": "tsup",
		"start": "node dist/index.js",
		"db:generate": "drizzle-kit generate --config ./drizzle.config.ts",
		"db:migrate": "tsx src/migrate.ts",
		"lint": "eslint src --ext .ts",
		"format": "prettier --write \"src/**/*.ts\"",
		"type-check": "tsc --noEmit"
	},
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@jetlag/shared-types": "workspace:*",
		"bcrypt": "^6.0.0",
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"drizzle-orm": "^0.44.2",
		"express": "^4.18.2",
		"express-rate-limit": "^7.1.5",
		"helmet": "^7.1.0",
		"jose": "^6.1.3",
		"pg": "^8.11.3",
		"socket.io": "^4.7.2",
		"winston": "^3.11.0",
		"zod": "^4.3.5"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.2",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/node": "^20.10.6",
		"@types/pg": "^8.10.9",
		"@typescript-eslint/eslint-plugin": "^6.17.0",
		"@typescript-eslint/parser": "^6.17.0",
		"drizzle-kit": "^0.31.1",
		"eslint": "^8.56.0",
		"prettier": "^3.1.1",
		"tsup": "^8.5.1",
		"tsx": "^4.7.0",
		"typescript": "^5.3.3"
	}
}
