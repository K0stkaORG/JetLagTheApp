{
	"name": "jet-lag-monorepo",
	"version": "1.0.0",
	"description": "Jet Lag monorepo containing mobile app and backend",
	"private": true,
	"packageManager": "pnpm@10.28.2",
	"pnpm": {
		"onlyBuiltDependencies": [
			"bcrypt",
			"es5-ext",
			"esbuild",
			"unrs-resolver"
		]
	},
	"scripts": {
		"dev": "pnpm --parallel --filter ./apps/mobile --filter backend dev",
		"dev:mobile": "pnpm --filter ./apps/mobile dev",
		"dev:backend": "pnpm --filter backend dev",
		"build:mobile": "pnpm --filter ./apps/mobile build:prod",
		"build:backend": "pnpm --filter backend build",
		"expo": "pnpm --filter ./apps/mobile exec expo"
	},
	"keywords": [],
	"author": "",
	"license": "ISC"
}
